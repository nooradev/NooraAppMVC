@model IEnumerable<NooraAppMVC.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h2>Product List</h2>
<p>
    <a asp-action="Create" class="btn btn-success mb-3">+ Add Product</a>
</p>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Stock</th>
            <th style="width:200px;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prod in Model)
        {
            <tr>
                <td>@prod.Id</td>
                <td>@prod.Name</td>
                <td>@prod.Description</td>
                <td>@prod.Price</td>
                <td>@prod.Category</td>
                <td>@prod.StockQuantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@prod.Id" class="btn btn-warning btn-sm">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@prod.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>